  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onikienko/mv3-parcel-webext-template/issues"
  },
  "homepage": "https://github.com/onikienko/mv3-parcel-webext-template#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.206",
    "@types/fs-extra": "^9.0.13",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/rimraf": "^3.0.2",
    "dot-json": "^1.2.2",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.30.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "filenamify": "^5.1.1",
    "fs-extra": "^11.1.0",
    "opener": "^1.5.2",
    "process": "^0.11.10",
    "release-it": "^15.5.1",
    "rimraf": "^3.0.2",
    "sharp": "^0.31.3",
    "zip-lib": "^0.7.3"
  },
  "dependencies": {
    "@parcel/config-webextension": "^2.8.2",
    "parcel": "^2.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
